name: working Dirs
on: [push]
jobs:
  display-wd-info:
    runs-on: ubuntu-latest
    steps:
      - name: display working dir
        run: |
          pwd
          ls -a
          echo $GITHUB_SHA
          echo $GITHIB_REPOSITORY
          echo $GITHUB_WORKSPACE
            
  display-wd-info:
    runs-on: windows-latest
    steps:
      - name: display working dir
        run: |
          pwd
          ls -a
          echo $GITHUB_SHA
          echo $GITHIB_REPOSITORY
          echo $GITHUB_WORKSPACE